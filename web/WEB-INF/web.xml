<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
           version="3.0">

    <welcome-file-list>
        <welcome-file>/</welcome-file>
    </welcome-file-list>

    <servlet>
        <display-name>test</display-name>
        <servlet-name>Test</servlet-name>
        <servlet-class>ru.fedichkindenis.bd.Test</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetListResources</servlet-name>
        <servlet-class>ru.fedichkindenis.servlets.GetListResources</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetResourceInfo</servlet-name>
        <servlet-class>ru.fedichkindenis.servlets.GetResourceInfo</servlet-class>
    </servlet>

    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/login.jsp</form-login-page>
        </form-login-config>
        <realm-name>default</realm-name>
    </login-config>

    <security-role>
        <role-name>
            admin
        </role-name>
    </security-role>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Application</web-resource-name>
            <url-pattern>/index.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>

</web-app>
